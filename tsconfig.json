{
	"compilerOptions": {
		"incremental": true,
		"target": "es2021",
		"module": "commonjs",
		"lib": [
			"es2021",
			"DOM",
			"ES2020.Promise"
		],
		"sourceMap": true,
		"outDir": "./bin",
		"rootDir": "src",
		"removeComments": true,
		"downlevelIteration": true,
		"strict": true,
		"noImplicitAny": true,
		"baseUrl": ".",
		"paths": {
			"@localizer/*": [
				"src/localizers/*"
			],
			"@command/*": [
				"src/commands/*"
			],
			"@module/*": [
				"src/modules/*"
			],
			"@type/*": [
				"src/types/*"
			],
			"@res/*": [
				"res/*"
			],
			"@app/*": [
				"src/*"
			],
			"@root/*": [
				"/*"
			]
		},
		"esModuleInterop": true,
		"inlineSources": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
	}
}