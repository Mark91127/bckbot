generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = "file:./db.sqlite"
}

model CurrencyUpdateInfo {
    id      String           @id @default(uuid())
    time    DateTime         @default(now())
    records CurrencyRecord[]
}

model CurrencyRecord {
    src        String
    dst        String
    value      Float
    updateID   String
    updateInfo CurrencyUpdateInfo @relation(fields: [updateID], references: [id])

    @@unique([src, dst, updateID])
}

model PixivCache {
    id   String   @id
    type String
    hash String
    time DateTime @default(now())
}

model Language {
    id       String   @id
    type     String
    language String
    override Boolean
}

model Ignore {
    id   String @id
    type String
}
